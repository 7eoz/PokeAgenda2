<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateUserActivity">

    <EditText
        android:id="@+id/login_create_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:hint="Login"
        android:textColorHint="#eb4848"
        android:textColor="#eb4848"/>

    <EditText
        android:id="@+id/email_create_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_create_input"
        android:hint="Email"
        android:textColorHint="#eb4848"
        android:textColor="#eb4848"/>

    <EditText
        android:id="@+id/pwd_create_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_create_input"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#eb4848"
        android:textColor="#eb4848"/>

    <Button
        android:id="@+id/create_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pwd_create_input"
        android:shadowColor="#3b3bca"
        android:background="#e7cb2e"
        android:textColor="#ffffff"
        android:text="Save"/>

    <ProgressBar
        android:id="@+id/progress_bar_create_user"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp" />


</RelativeLayout>