<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PokeDetailActivity">

    <ImageView
        android:id="@+id/pokemon_image_detail"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/pokemon_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pokemon_image_detail"
        android:textSize="23sp"
        android:text="pokemon_name"/>

    <TextView
        android:id="@+id/pokemon_species_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pokemon_image_detail"
        android:layout_below="@+id/pokemon_name_detail"
        android:textSize="18sp"
        android:text="pokemon_species"/>

    <TextView
        android:id="@+id/pokemon_weight_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pokemon_image_detail"
        android:textSize="18sp"
        android:text="pokemon_weight"/>

    <TextView
        android:id="@+id/pokemon_height_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pokemon_weight_detail"
        android:textSize="18sp"
        android:text="pokemon_height"/>

    <TextView
        android:id="@+id/pokemon_trainer_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pokemon_height_detail"
        android:textSize="18sp"
        android:text="pokemon_trainer"/>

</RelativeLayout>